<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Course Code and Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Course Code -->
            <TextView
                android:id="@+id/course_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS 201"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:background="@drawable/rounded_border"
                android:padding="8dp"
                android:layout_marginRight="12dp"/>

            <!-- Course Name -->
            <TextView
                android:id="@+id/course_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data Structures and Algorithms"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <!-- Course Details -->
        <TextView
            android:id="@+id/course_details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 credits â€¢ Level 200"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp"/>

        <!-- Department -->
        <TextView
            android:id="@+id/department_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Computer Science"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Tap instruction -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘† Tap to start attendance"
            android:textSize="12sp"
            android:textColor="@color/primary_color"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:alpha="0.7"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>