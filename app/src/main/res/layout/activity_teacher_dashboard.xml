<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <TextView
            android:id="@+id/teacher_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_teacher"
            style="@style/Page_Header"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/current_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2_30_pm"
            android:textSize="18sp"
            android:textColor="@color/primary_color"/>
    </LinearLayout>

    <!-- Stats Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_border"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Dashboard Stats"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/stats_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading stats..."
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>


    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_session_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Start Attendance Session"
            android:textSize="16sp"
            android:backgroundTint="@color/primary_color"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/logout"
            style="@style/button_text"
            android:backgroundTint="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_start_attendance_session_to_begin_taking_attendance_for_your_current_class"
        style="@style/hint"
        android:textAlignment="center"
        android:layout_marginTop="24dp"/>

</LinearLayout>